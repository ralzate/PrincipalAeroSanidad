<%- model_class = AdditionalInformation -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:analysis) %></th>
      <th><%= model_class.human_attribute_name(:print_diagnosed) %></th>
      <th><%= model_class.human_attribute_name(:plan_and_treatment) %></th>
      <th><%= model_class.human_attribute_name(:observations_recommendations) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @additional_informations.each do |additional_information| %>
      <tr>
        <td><%= link_to additional_information.id, additional_information_path(additional_information) %></td>
        <td><%= additional_information.analysis %></td>
        <td><%= additional_information.print_diagnosed %></td>
        <td><%= additional_information.plan_and_treatment %></td>
        <td><%= additional_information.observations_recommendations %></td>
        <td><%=l additional_information.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_additional_information_path(additional_information), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      additional_information_path(additional_information),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_additional_information_path,
            :class => 'btn btn-primary' %>

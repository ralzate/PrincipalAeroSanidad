<%- model_class = ClinicHistory -%>
  <div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize  %></h1>
  </div>
   <div class="navbar">
    <div class="navbar-inner">
    <li id='buscar' class="brand" href="#">Buscar</li> 
      <div class="row">
        <div class="span6">
          <form method="GET" class="form-inline" >
            <input id='buscar' name="buscar" class="search-query" type="text"  placeholder="Buscar" >
            <a  rel="tooltip" title="Ingresar datos a buscar"><button id='buscar' type="submit" class="btn btn-primary"><i class="icon-search icon-white"></i></button></a>
          </form>
        </div>
      </div>
    </div>
  </div>
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <th>Id</th>
          <th>Placa</th>
          <th>color</th>
          <th>Marca</th>
          <th>Modelo</th>
          <th>Tipo vehiculo</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
    <% @clinic_histories.each do |clinic_history| %>
      <tr>
        <td><%= link_to clinic_history.id, patient_clinic_history_path(@patient,clinic_history) %></td>
        <td><%= clinic_history.id %></td>
        <td><%=l clinic_history.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_patient_clinic_history_path(@patient,clinic_history), :class => 'btn btn-mini' %>

<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      patient_clinic_history_path(@patient,clinic_history),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>iii

        </td>
      </tr>
    <% end %>
  </tbody>



</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_patient_clinic_history_path(@patient),
            :class => 'btn btn-primary' %> | 
